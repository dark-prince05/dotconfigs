{
    "workbench.activityBar.orientation": "vertical", //used for ctrl h,j,k,l navigations in cursor
    "workbench.preferredHighContrastColorTheme": "Tokyo Night",
    "vscode-neovim.neovimInitVimPaths.linux": "/home/darkprince/.config/vscode-nvim/init.lua",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.compositeKeys": {
        "jk": {
            // Use lua to execute any logic
            "command": "vscode-neovim.lua",
            "args": [
                [
                    "local code = require('vscode')",
                    "code.action('vscode-neovim.escape')",
                ],
            ],
        },
    },
    "vscode-neovim.ctrlKeysForInsertMode": [
        "a",
        "c",
        "d",
        "h",
        "j",
        "k",
        "m",
        "o",
        "p",
        "r",
        "t",
        "u",
        "w",
        "s",
    ],
    "vscode-neovim.ctrlKeysForNormalMode": [
        "a",
        "b",
        "c",
        "d",
        "e",
        "f",
        "h",
        "i",
        "j",
        "k",
        "l",
        "m",
        "o",
        "p",
        "r",
        "s",
        "t",
        "u",
        "v",
        "w",
        "x",
        "y",
        "z",
        "/",
        "]",
        "right",
        "left",
        "up",
        "down",
        "backspace",
        "delete",
    ],
    "editor.lineNumbers": "relative",
    "editor.tabSize": 2,
    "git.openRepositoryInParentFolders": "never",
    "multiCommand.commands": [
        {
            "command": "multiCommand.copyAndEscape",
            "sequence": [
                "editor.action.clipboardCopyAction",
                "vscode-neovim.escape"
            ]
        },
    ],
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.list.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.iconTheme": "material-icon-theme",
    "editor.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
}
